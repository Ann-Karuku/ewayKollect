<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/footer_grey"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="165sp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardMaxElevation="20dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:background="@drawable/gradient_bg">

      </LinearLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/acc_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon"
            />
        <TextView
            android:id="@+id/acc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ann Karuku"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="140dp"/> <TextView
        android:id="@+id/acc_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="annkaruku@gmail.com"
        android:textColor="@color/dark_grey"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140sp"
        app:cardCornerRadius="10dp"
        android:layout_margin="7dp"
        app:cardMaxElevation="20dp">
        <TextView
            android:layout_width="wrap_content"
