<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/faqs"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/search_faqs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search FAQs"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"/>

    <LinearLayout
        android:id="@+id/faq_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/faq_question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What types of e-waste do you accept?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/faq_answer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We accept mobile phones, tablets, laptops, and other electronics."
            android:visibility="gone"
            android:padding="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_submit_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>


</LinearLayout>
