<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="250dp"
     android:orientation="vertical"
     android:background="@color/other_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/prof_logout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Logout"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="340dp"/>

     <com.mikhaellopez.circularimageview.CircularImageView
         android:id="@+id/prof_image"
         android:layout_width="130dp"
         android:layout_height="130dp"
         android:layout_gravity="center"
         android:src="@drawable/icon"
         />

        <ImageView
            android:id="@+id/prof_camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/ic_camera" />
    </LinearLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="19dp"
         android:text="Ann Karuku"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:gravity="center_horizontal"
         android:layout_marginTop="10dp"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="22dp"
         android:text="annkaruku5832@gmail.com"
         android:textSize="13sp"
         android:textColor="@color/white"
         android:gravity="center_horizontal"
         android:layout_marginTop="5dp"/>
 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_dark_phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0796253425"
            android:textColor="@color/dark_grey"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="7dp"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_grey"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="County"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nakuru"
            android:textColor="@color/dark_grey"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="7dp"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_grey"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Town"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naivasha"
            android:textColor="@color/dark_grey"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="7dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
       android:gravity="center">

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg"
            android:text="Edit Profile"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_edit"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg"
            android:text="Change Password"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    </LinearLayout>
</FrameLayout>