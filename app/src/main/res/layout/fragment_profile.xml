<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@color/other_green">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/prof_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon" />

                <ImageView
                    android:id="@+id/edt_camera"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_camera" />
            </FrameLayout>

            <TextView
                android:id="@+id/prof_name"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="@string/name"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/prof_email"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="@string/email"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:contentDescription="@string/phone"
                android:src="@drawable/ic_dark_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="7dp" />

            <TextView
                android:id="@+id/prof_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phonenumber"
                android:textColor="@color/dark_grey"
                android:textSize="17sp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="7dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_grey"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/county"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="7dp" />

            <TextView
                android:id="@+id/prof_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/county"
                android:textColor="@color/dark_grey"
                android:textSize="17sp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="7dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_grey"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/town"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="7dp" />

            <TextView
                android:id="@+id/prof_subcounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/town"
                android:textColor="@color/dark_grey"
                android:textSize="17sp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="7dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:gravity="center">

            <TextView
                android:id="@+id/edt_profile"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg"
                android:text="@string/edit_profile"
                android:padding="7dp"
                android:gravity="center"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_edit" />

        <TextView
            android:id="@+id/change_pass"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg"
            android:text="@string/change_pass"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:drawableStartCompat="@drawable/ic_baseline_lock_24" />
    </LinearLayout>

    </LinearLayout>
</FrameLayout>