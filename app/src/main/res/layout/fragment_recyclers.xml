<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclersFragement"
    android:orientation="vertical">

    <!-- Map View -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/maps"/>

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="@string/search_recyclers"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_search"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/other_green"
        app:boxBackgroundColor="@color/transparent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_faqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:background="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Horizontal ScrollView for Groups -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:contentDescription="@string/horizontalScroll">

        <LinearLayout
            android:id="@+id/linearLytGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Vertical ScrollView for Recycler Lists -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:contentDescription="@string/verticalScroll">

    <LinearLayout
        android:id="@+id/verticalRecyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" />
    </ScrollView>

</LinearLayout>