<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Image of the e-waste item -->
    <ImageView
        android:id="@+id/imageViewEwaste"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/ewaste_image"
        android:scaleType="centerCrop" />

    <!-- Container for the text (name, type, and description) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Horizontal layout for name and type -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp" >

            <!-- Name of the e-waste item -->
            <TextView
                android:id="@+id/textViewEwasteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/datch_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/datch"
                android:textColor="@android:color/black" />

            <!-- Type of the e-waste item -->
            <TextView
                android:id="@+id/textViewEwasteType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Number of the e-waste item with a label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Label for the number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Number of the e-waste item -->
            <TextView
                android:id="@+id/textViewEwasteNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- State of the e-waste item with a label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Label for the number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- State of the e-waste item -->
            <TextView
                android:id="@+id/textViewEwasteState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:textColor="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
