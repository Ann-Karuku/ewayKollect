<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EwayKollect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/other_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/main_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_green</item>
        <!-- Customize your theme here.-->
        
    </style>

    <style name="Theme.splashscreen" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/main_grey</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ftlogo</item>
        <item name="postSplashScreenTheme">@style/Theme.EwayKollect</item>



    </style>
</resources>